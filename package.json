        "@types/node": "^22.10.5",
        "@vitejs/plugin-vue": "^5.2.1",
        "eslint": "^9.17.0",
        "typescript": "^5.7.2",
        "vite": "^6.2.2",
        "vite-plugin-dts": "^4.5.3"
    }
