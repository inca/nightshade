.container {
  padding-left: $gap;
  padding-right: $gap;
  margin-left: auto;
  margin-right: auto;
  box-sizing: border-box;
  width: 100%;
  min-height: 0;

  transition: width .3s, padding .3s, min-height .3s;
}

@media (min-width: $screen-large-min) {

  .container--fixed {
    width: $screen-large-min;
  }

}
